# RAG 관련 설정
# USE_RAG: RAG 파이프라인 활성화 여부 (True/False)
# True로 설정하면, 에이전트가 지식 베이스를 참조하여 컨텍스트를 강화합니다.
# False로 설정하면, RAG 단계를 건너뛰고 사용자의 요청과 데이터만으로 분석을 수행합니다.
USE_RAG=True

# REBUILD_VECTOR_STORE: 벡터 인덱스 재생성 여부 (True/False)
# True로 설정하면, 시스템 실행 시 기존에 만들어진 벡터 인덱스를 모두 삭제하고,
# knowledge_base의 문서를 다시 읽어 임베딩과 인덱스를 새로 생성합니다.
# 지식 베이스의 내용이 변경되었을 때 True로 설정하여 실행합니다.
REBUILD_VECTOR_STORE=False

# LLM 관련 설정
# OPENAI_API_KEY: OpenAI API 사용을 위한 키. "sk-..." 형식입니다.
OPENAI_API_KEY="YOUR_API_KEY_HERE"

# LLM_PROVIDER: 사용할 LLM 종류를 지정합니다.
# "openai": 실제 OpenAI API를 사용합니다.
# "mock": 개발 및 테스트 목적으로, API 호출 없이 미리 지정된 응답을 반환하는 가짜 LLM을 사용합니다.
LLM_PROVIDER="openai" 