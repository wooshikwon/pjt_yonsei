# Text-to-Statistical-Test Environment Configuration
# 이 파일의 복사본을 .env 라는 이름으로 만들고, 실제 값을 채워주세요.
# cp env.example .env

# =============================================================================
# API Keys (필수)
# =============================================================================
# OpenAI API 키: LLM 추론, 계획, 보고서 생성을 위해 반드시 필요합니다.
OPENAI_API_KEY="your_openai_api_key_here"

# =============================================================================
# Application Settings (선택)
# =============================================================================
# 디버그 모드 활성화 (true/false)
# true로 설정하면 더 상세한 로그를 출력합니다.
DEBUG=false

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
# =============================================================================
# Data Paths
# =============================================================================
INPUT_DATA_DIR=./input_data
OUTPUT_DATA_DIR=./output_data
LOGS_DIR=./logs
RESOURCES_DIR=./resources

# =============================================================================
# RAG Configuration
# =============================================================================
VECTOR_STORE_TYPE=faiss
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# LLM Model Settings
# =============================================================================
DEFAULT_LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229
MAX_TOKENS=2000
TEMPERATURE=0.3

# =============================================================================
# Statistical Analysis Settings
# =============================================================================
SIGNIFICANCE_LEVEL=0.05
CONFIDENCE_LEVEL=0.95
BOOTSTRAP_SAMPLES=1000
MAX_ITERATIONS=1000

# =============================================================================
# Performance Settings
# =============================================================================
CACHE_TTL_SECONDS=3600
MAX_MEMORY_MB=2048
CHUNK_PROCESSING=true
PARALLEL_WORKERS=4

# =============================================================================
# Security Settings
# =============================================================================
SAFE_CODE_EXECUTION=true
SANDBOX_TIMEOUT=30
MAX_FILE_SIZE_MB=100

# =============================================================================
# Optional Services (for advanced features)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# MQTT_BROKER_URL=mqtt://localhost:1883 